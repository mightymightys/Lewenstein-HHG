    keywords = {dynamics, hhg, molecules, self-probing, transient-grating},
    month = jul,
    number = {7306},
    pages = {604--607},
    priority = {2},
    publisher = {Nature Publishing Group},
    title = {Following a chemical reaction using high-harmonic interferometry},
    url = {http://dx.doi.org/10.1038/nature09185},
    volume = {466},
    year = {2010}
}


